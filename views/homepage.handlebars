<section class="pt-2 container-fluid d-flex flex-row">
  <div class="col-xs-12 col-sm-12 col-md-8 p-2">
    <div class="card border-light gradient col-xs-12 text-white">
      <img
        src="https://images.pexels.com/photos/40568/medical-appointment-doctor-healthcare-40568.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
        class="card-steth" style="height:18rem" alt="...">
      <div class="card-img-overlay">
        <h5 class="card-title fw-normal">Welcome</h5>
        <h4 class="card-title fw-bold fs-2">{{username}}</h4>
        <h4 class=" fw-normal fs-6 fst-italic">To Keep the body in good health is a duty... otherwise we shall not be able to keep our mind strong and clear.</h4>
      </div>
    </div>

    <div class="card border-light col-xs-12" style="height: 8rem;">
      <div class="card-body d-flex column p-3 ">
        <div class="d-flex col-4">
          <div class="col-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#8080ff" class="bi bi-calendar-date" viewBox="0 0 16 16">
  <path d="M6.445 11.688V6.354h-.633A12.6 12.6 0 0 0 4.5 7.16v.695c.375-.257.969-.62 1.258-.777h.012v4.61h.675zm1.188-1.305c.047.64.594 1.406 1.703 1.406 1.258 0 2-1.066 2-2.871 0-1.934-.781-2.668-1.953-2.668-.926 0-1.797.672-1.797 1.809 0 1.16.824 1.77 1.676 1.77.746 0 1.23-.376 1.383-.79h.027c-.004 1.316-.461 2.164-1.305 2.164-.664 0-1.008-.45-1.05-.82h-.684zm2.953-2.317c0 .696-.559 1.18-1.184 1.18-.601 0-1.144-.383-1.144-1.2 0-.823.582-1.21 1.168-1.21.633 0 1.16.398 1.16 1.23z"/>
  <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
</svg>
          </div>
          <div class="col-8">
            <p class="fw-bold fs-2">105</p>
            <p class="fw-normal text-muted">Appointments</p>
          </div>
        </div>
        <div class="d-flex col-4">
          <div class="col-4">
           <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#ff3333" class="bi bi-exclamation-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z"/>
</svg>
          </div>
          <div class="col-8">
            <p class="fw-bold fs-2">40</p>
            <p class="fw-normal text-muted">Urgent Resolve</p>
          </div>
        </div>
        <div class="d-flex col-4">
          <div class="col-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="#4dff4d" class="bi bi-person-circle" viewBox="0 0 16 16">
  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
  <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
</svg>
          </div>
          <div class="col-8">
            <p class="fw-bold fs-2">105</p>
            <p class="fw-normal text-muted">Available Doctors</p>
          </div>
        </div>
      </div>
    </div>
    <div>
      <h4 class="text-muted">Top Doctors</h4>

      <div class="row">
        {{#each topDoctors as |user| }}
        <div class="col-12 col-md-6">
          <div class="card border-light">
            <img class="card-steth"
              src="https://images.pexels.com/photos/5998474/pexels-photo-5998474.jpeg?auto=compress&cs=tinysrgb&w=600"
              class="card-img-top" style="height: 18rem;" alt="...">
            <div class="card-body">
              <p class="card-text">Name: {{user.username}}</p>
              <p class="card-text">Email: {{user.email}}</p>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star checked"></span>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class="col-md-4 p-2">
    
    <div class="card border-light p-3">
      <div class="card-body">
        <div>
        <p class="fw-bold fs-5">December 14, 2022</p>
      </div>
      </div>
      <div>
        <h5 class="text-muted">Today's Appointments</h5>
      </div>
      <div class="column p-2">
        {{#each patientList as |patients| }}
        <div class="col-12">
          <div class="card p-2">
            <p class="card-text">9:00 am to 9:30 am</p>
            <div class="d-flex">
              <img class="avatar "
                src="https://images.pexels.com/photos/5998474/pexels-photo-5998474.jpeg?auto=compress&cs=tinysrgb&w=600"
                alt="profile picture of a smiling girl in black graduation cap and black gown with red and white trim">
              <div class="card-body">
                <p class="card-text fw-bold">{{patients.FirstName}}</p>
                <div class="row">
                  <div class="col-6">
                    <p class="card-text text-muted fs-6 text-nowrap">Consultation with</p>
                  </div>
                  <div class="col-6">
                    <p class="card-text fw-bold fs-6">Dr. {{patients.EmployeeAssigned}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

    </div>

  </div>
</section>